#!/bin/bash


val="$(volume_pts)"

function get_icon(){
    case "$(pactl get-sink-mute @DEFAULT_SINK@)" in
        "Mute: no")
            if [ $val -ge 80 ]; then
                echo "ðŸ”Š"
                break
            elif [ $val -ge 40 ]; then
                echo "ðŸ”‰"
            else
                echo "ðŸ”ˆ"
            fi
            ;;
        "Mute: yes")
            echo "ðŸ”‡"
            ;;
        *)
            exit 0
            ;;
    esac
}


echo "$(get_icon)$val%"