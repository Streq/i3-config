TYPE="${BLOCK_INSTANCE:-mem}"

awk -v type=$TYPE '
/^MemTotal:/ {
	mem_total=$2
}
/^MemFree:/ {
	mem_free=$2
}
/^Buffers:/ {
	mem_free+=$2
}
/^Cached:/ {
	mem_free+=$2
}
/^SwapTotal:/ {
	swap_total=$2
}
/^SwapFree:/ {
	swap_free=$2
}
END {
	# full text
	sf=swap_free/1024/1024
	st=swap_total/1024/1024
	su=st-sf
	mf=mem_free/1024/1024
	mt=mem_total/1024/1024
	mu=mt-mf
#	if (type == "swap")
#		printf("%.1fG (%.1fG)/%.1fG\n%.1fG\n", sf, su, st, su)
#	else
#		printf("%.1fG (%.1fG)/%.1fG\n%.1fG\n", mf, mu, mt, mf)
	if (type == "swap")
		printf("%.1fG\n", su)
	else
		printf("%.1fG\n", mf)
	# TODO: color (if less than X%)
}
' /proc/meminfo


case $BLOCK_BUTTON in
  1) i3-sensible-terminal -e btop ;;
esac