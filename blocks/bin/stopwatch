#!/bin/bash
BASE_PATH="~/.stopwatch/"
TASK="${1:-work}"
ACTION="${2:-get}"




ACCUM_FILE=accum
EMPTY="00:00:00"
TIME=0
ICON=""
RUNNING=0
reset_accum () {
  echo "0" > $ACCUM_FILE;  
}

epoch () {
  date +%s
}

init () {
  if ! [ -f $ACCUM_FILE ]; then 
    reset_accum
  fi
  local accum="$(cat $ACCUM_FILE)"
  if ! [ -f $FILE ]; then 
    RUNNING=0
    TIME="$accum"
    ICON="ðŸ’¤"
  else
    RUNNING=1
    local start="$(cat $FILE)"
    TIME="$(($(epoch) - $start + $accum))"
    ICON="ðŸŸ¥"
  fi
}

toggle () {
  if (( $RUNNING == 1 )); then
    off;
  else
    on;
  fi
}

on () {
  echo "$TIME" > $ACCUM_FILE;
  echo "$(epoch)" > $FILE;
}

off () {
  echo "$TIME" > $ACCUM_FILE;
  rm $FILE
}

delete () {
  reset_accum;
  rm $FILE;
}

init

# TODO

case $BLOCK_BUTTON in
  1) TASK=toggle ;;
  3) TASK=delete ;;
esac

case $TASK in
  toggle) toggle ;;
  off) off ;;
  on) on ;;
  pause) pause ;;
esac

if ! [ -z "$BLOCK_BUTTON" ]; then
  init;
fi

echo "$ICON $(date -u -d "@$TIME" +%H:%M:%S)"
#paplay /usr/share/sounds/Yaru/stereo/audio-volume-change.oga
