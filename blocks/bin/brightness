#!/bin/bash
case $BLOCK_BUTTON in
  4) brightnessctl -q set +5% ;; # scroll up
  5) brightnessctl -q set 5%- ;; # scroll down
esac


regex="([0-9]+)%"
if [[ $(brightnessctl -m) =~ $regex ]]
then
    brightness="${BASH_REMATCH[1]}"
    icon=ðŸ”†
    if [ $brightness -lt 100 ]; then
        icon=ðŸ”…
    fi
    
    echo "$icon$brightness%"
fi