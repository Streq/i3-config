# volumeicon ```sudo apt install -y volumeicon-alsa```
# exec --no-startup-id volumeicon;
# ```sudo apt install -y pavucontrol```

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3 pkill -RTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec --no-startup-id volume_up && $refresh_i3
bindsym XF86AudioLowerVolume exec --no-startup-id volume_down && $refresh_i3
bindsym XF86AudioMute exec --no-startup-id volume_mute && $refresh_i3
bindsym XF86AudioMicMute exec --no-startup-id mic_mute && $refresh_i3